<h1>Edit a Recipe</h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="name" value="<%= @recipe.name %>" placeholder="Enter a name">
  <input type="text" name="ingredients" value="<%= @recipe.ingredients %>" placeholder="Enter ingredients">
  <input type="text" name="cook_time" value="<%= @recipe.cook_time %>" placeholder="Enter cook_time">
  <input type="submit" />
</form>
